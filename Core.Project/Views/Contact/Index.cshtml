@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Tüm Mesajlar</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">İsim</th>
                <th scope="col" class="sort" data-sort="status">Mail</th>
                <th scope="col" class="sort" data-sort="completion">Tarih</th>
                <th scope="col" class="sort" data-sort="completion">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Güncelle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.MessageID</th>
                    <td>@item.Name</td>
                    <td>@item.Mail</td>
                    <td>@item.Date</td>
                    <td><a href="/Contact/DeleteContact/@item.MessageID">Sil</a></td>
                    <td><a href="/Contact/ViewContact/@item.MessageID">Mesajı Gör</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>



