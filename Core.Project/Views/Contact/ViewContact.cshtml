@model Message
@{
    ViewData["Title"] = "ViewContact";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin strecth-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">İLetişim Mesajları</p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>Id</label>
                   @Html.TextBoxFor(x=>x.MessageID,new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>İsim</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x => x.Content, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
            </form>
        </div>
    </div>
</div>

